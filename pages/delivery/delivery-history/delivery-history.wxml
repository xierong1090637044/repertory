<view class='page'>
    <view style='line-height:35px;padding: 0 10px;'>The selected product</view>
    <view style='max-height:25vh;overflow-x:scroll'>
       <view wx:for="{{goods}}" wx:key="{{index}}" class='pro_listitem'>
          <view class='pro_list' style='color:#000'>
               <view>Products:{{item.goodsName}}</view>
               <view>retail price:￥{{item.retailPrice}}</view>
          </view>
          <view class='pro_list'>
               <view>Actual selling price:￥{{item.modify_retailPrice}}（X{{item.num}}）</view>
               <view>Total:￥{{item.total_money}}</view>
          </view>
       </view>
    </view>
     <view class='pro_allmoney'>All：￥{{all_money}}</view>

    <form bindsubmit="formSubmit" report-submit="true">
    <i-panel title="Billing details (used to record whether the customer owes money or not)">
      <i-input title="Customer name" value="{{custom.custom_name}}" placeholder="Select the customer" disabled="true" bindtap='choose_custom'/>
      <i-input title="The actual receivable" value="{{all_money}}" placeholder="Input actual receivabl" disabled="true"/>
      <i-input title="Actual collection (modifiable)" value="{{real_money}}" placeholder="输入实际收到的钱款" bindchange='getreal_money'/>
    </i-panel>

    <view style='margin-top:20px'>
         <textarea placeholder='Please enter remarks' class='beizhu_style' bindinput="input_beizhu"></textarea>
    </view>

    <view>
        <button class='confrim_button' bindtap='confrim_delivery' disabled='{{button}}' form-type="submit">Confirm the delivery</button>
    </view>
    </form>

</view>
