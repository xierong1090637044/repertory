/* pages/common/friend-dtl/friend-dtl.wxss */
.friends-dtl-container{
  position: relative;
  flex: 1;
  min-height: 100%;
}
.banner{
    position: relative;
    width: 100%; 
    height: 450rpx; 
    display: flex;
    background-size:100% 100%; 
    box-sizing: border-box ; 
    align-items:center;
    justify-content: center;
    overflow: hidden;
}
.banner-img{
  width: 100%; 
  height: 500rpx; 
  background-size:cover;
  -webkit-filter: blur(5px);
  filter: blur(5px);
}
.avatar{
  display: flex;
  position: absolute;
  background-color: #fff;
  width: 170rpx;
  height: 170rpx;
  border-radius: 50%;
  border: 1px solid #118FFF;/*描边*/
}

.sex{
  display:flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  background-color: #fff;
  width: 43rpx;
  height: 43rpx;
  text-align: center;
  right: 290rpx;
  margin-top: 70rpx;
  border-radius: 50%;
  border: 1px solid #118FFF;/*描边*/
}

.username{
  position: absolute;
  height: 150rpx;
  text-align: center;
  font-size: 20px;
  color:#fff;
  bottom: -40rpx;
  text-shadow: black 0.1em 0.1em 0.2em
}
.follow{
  display: flex;
  background: #FFFFFF;
  text-align: center;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
}

.follow image{
 height: 45rpx;
 width: 45rpx;
}

.follow text{
  font-size: 40rpx;
}

.content{
  flex:1;position:absolute;width:100%;min-height:50%;
  display: flex;
  align-items: center;
  justify-content: center;
}