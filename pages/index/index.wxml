<!--操作列表-->
<view class='o_list'>
  <navigator wx:for="{{optionsLists}}" wx:key="{{index}}" class='o_item' url="{{item.url}}">
    <view style='width:100%'><image src='{{item.icon}}' class='o_image'/></view>
    <view class='o_text'>{{item.name}}</view>
  </navigator>
</view>

