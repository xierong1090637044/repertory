<!-- </view> -->
<view class='index-container'>
  <view class='instruction'>
    <view bindtap='handleInstruction'>
      <i-icon type="feedback" size="17"/>使用说明
    </view>
  </view>
  <view class='title'>
     <image class="title-image" src="/images/authorize/title.png"></image>
  </view>
  <view class='content'>
    <view class='bd'>
      <swiper class='module' indicator-dots="true" circular="true" indicator-active-color="#118fff">
        <swiper-item>
          <i-row>
            <i-col span="8" i-class="padded-5" wx:for="{{firstlyModules}}" wx:key="unique">
              <navigator url='{{item.url}}'>
                <i-grid i-class="module-grid">
                  <i-grid-item>
                      <i-grid-icon i-class='module-grid-icon'>
                        <image src="{{item.icon}}" />
                      </i-grid-icon>
                      <i-grid-label class='label-style'>{{item.name}}</i-grid-label>
                  </i-grid-item>
                </i-grid>
              </navigator>
            </i-col>
          </i-row>
        </swiper-item>

        <swiper-item>
          <i-row>
            <i-col span="8" i-class="padded-5" wx:for="{{secondaryModules}}" wx:key="unique">
              <navigator url='{{item.url}}'>
                <i-grid i-class="module-grid">
                  <i-grid-item>
                      <i-grid-icon i-class='module-grid-icon'>
                        <image src="{{item.icon}}" />
                      </i-grid-icon>
                      <i-grid-label class='label-style'>{{item.name}}</i-grid-label>
                  </i-grid-item>
                </i-grid>
              </navigator>
            </i-col>
          </i-row>
          </swiper-item>

      </swiper>
    </view>
  </view>

  <view class='scan_code' bindtap='scan_code'>
     <i class="iconfont icon-saomiao icon-scan"></i>
     <text>扫描产品条形码</text>
  </view>

  <view class='scan_notice'>（不可以从相册选取）</view>

</view>
<view class='every' style='height:{{height}}'></view>
