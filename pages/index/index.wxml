<!--当月详情-->
<view>
  <swiper indicator-dots="true" indicator-active-color="#fff" class='swiper' autoplay='true'>
  <block>
    <swiper-item class="item">
      <view class='every_item'>
        <view class='s_num'>{{total_reserve}}</view>
        <view>库存总量</view>
      </view>
      <view class='every_item'>
        <view class='s_num'>{{total_money}}</view>
        <view>库存成本</view>
      </view>
    </swiper-item>
  </block>
</swiper> 
</view>

