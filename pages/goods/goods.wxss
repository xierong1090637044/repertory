/* pages/goods/goods.wxss */
.item-oper{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    border-bottom: 1px solid #f4f4f4;
    display: flex;
    justify-content: flex-end;
}
/*自定义按钮*/
.i-swipeout-item view{padding: 0 0 0 5rpx}
.i-swipeout-button-group{
    height:100%;
    width:100%;
}
.i-swipeout-button{
    width:103px;
    float:left;
    display: flex;
    height:100%;
    justify-content: center;
    color:#fff;
    align-items:center;
}

.goods_wrap{
  height: calc(100vh - 142px);
  overflow: scroll;
  background: #fff;
  margin-bottom: 10px
}

.fristcontent
{
  display:flex;
  justify-content: space-between;
  padding: 8px 10px;
  color:#f76a24;
  background-color:#fefcec;
}

.display_flex
{
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  padding: 10px 0 10px 10px;
  border-bottom: 1px solid#ddd;
}
.btn-group
{
  width: 120px;
}

.i-cell-desc{line-height:20px;font-size:12px;color:#3d3d3d;font-weight: bold}
