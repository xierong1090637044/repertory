<i-spin size="large" fix wx:if="{{ spinShow }}"></i-spin>

<!--*筛选器*-->
  <view class='select'>
    <view class="section">
      <picker bindchange="bindDateChange" value="{{index}}" range-key="name" range="{{array}}" mode = "date">
        <view class="picker">
          <text>{{show_start_data}}</text>
          <i class="icon iconfont icon-xiangxia1" style="margin-left:8px;font-size:14px"></i>
        </view>
      </picker>
    </view>

    <view class="section">
      <picker bindchange="bindDate_endChange" value="{{index}}" range-key="name" range="{{array}}" mode = "date">
        <view class="picker">
          <text>{{show_end_data}}</text>
          <i class="icon iconfont icon-xiangxia1" style="margin-left:8px;font-size:14px"></i>
        </view>
      </picker>
    </view>
  </view>

  <view style='display:{{view1}}'>
  <view class='text_desicbe'>Survey:</view>
  <view class='frist_content'>
    <view style='width:50%'>
      <i-cell-group >
        <i-cell title="Quantity of warehousing" value="{{get_reserve}}"></i-cell>
        <i-cell title="Total warehousing cost" value="{{get_reserve_num}}" ></i-cell>
        <i-cell title="Total expected sales" value="{{get_reserve_real_money}}" ></i-cell>
        <i-cell title="Expected profitability" value="{{get_reserve_get_num}}" ></i-cell>
      </i-cell-group>
    </view>

    <view style='width:50%'>
      <i-cell-group >
        <i-cell title="Outgoing quantity" value="{{out_reserve}}"></i-cell>
        <i-cell title="Total Outgoing Cost" value="{{out_reserve_real_money}}" ></i-cell>
        <i-cell title="Total Outgoing Receivables" value="{{out_reserve_num}}" ></i-cell>
        <i-cell title="Gross profit" value="{{out_reserve_get_num}}" ></i-cell>
      </i-cell-group>
    </view>
  </view>

  <view class='second_content'>
    <view style='width:50%'>
      <i-cell-group >
        <i-cell title="Receivable on that day" value="￥{{should_get_money}}"></i-cell>
      </i-cell-group>
    </view>

    <view style='width:50%'>
      <i-cell-group >
        <i-cell title="Actual receipt on that day" value="￥{{real_get_money}}"></i-cell>
      </i-cell-group>
    </view>
  </view>
  </view>

