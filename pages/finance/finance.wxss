/* pages/finance/finance.wxss */
.fin-grid{
  background: #fff;
  margin:0;
  border: 0!important;
}
.fin-grid-item{
  padding: 0!important;
  border: 0!important;
}
.fin-grid-item-content{
  padding: .2rem;
}
.fin-grid-item-title{
  display: block;
  font-size: .9rem;
  font-weight: bold!important;
  text-align: center;
}
.fin-grid-item-num{
  display: block;
  color:#AFAFAF;
  text-align: center;
}
.fin-grid-item-num text{
  font-size: .9rem;
  color:#343434;
  font-weight: bold!important;
}
.canvas-title{
  display: flex;
  background: #ffffff;
  font-size: .9rem;
  padding: 10px;
  align-content: center;
}
.canvas-title text{
  display: flex;
  align-items: center;
}
.canvas-tip{
  width: 100%;
  background: #ffffff;
  display: block;
  padding:5px 2px;
}
.canvas-tip view{
  margin: 0 10px;
  padding: 5px;
  font-size: 14px;
  border: 1px solid #E5E5E5;
  box-shadow:rgba(0, 0, 0, 0.12) 0px 2px 4px;
}
.canvas-tip view text{
  color: #AFAFAF;
}
.canvas-content{
  background: #ffffff;
  position: relative;
  padding: 10px 0;
}
.canvas {
    width: 100%;
    height: 200px;
}
.border-b-1{
  border-bottom: 1px solid #E5E5E5;
}
@keyframes loading-spin {
    0% {
        transform: rotate(0);
    }
    100% {
        transform: rotate(360deg);
    }
}
.loading{
  display: inline-block;
  margin-right: 12px;
  vertical-align: middle;
  width: 20px;
  height: 20px;
  background: transparent;
  border-radius: 50%;
  border: 2px solid #2d8cf0;
  border-color: #2d8cf0 #2d8cf0 #2d8cf0 transparent;
  animation: loading-spin 0.6s linear;
  animation-iteration-count: infinite;
}
